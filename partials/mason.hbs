

    <link href="{{asset "css/bootstrap.css"}}" rel="stylesheet" />
    <link href="{{asset "css/base.css"}}" rel="stylesheet">


    {{! Each post will be output using this markup }}
    {{#foreach posts}}
	<div class="col-lg-3">
		<article class="{{post_class}}">
             <div><a href="{{url}}"><header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}"></a></div>
                 
    <div>
			<h2><a href="{{url}}">{{{title}}}</a></h2>
		
			<p>{{content words="20"}}</p>
		
		</article>
	</div>
	{{/foreach}}


	<div class="clear"></div>

<div class="span12">
	<div class="post_navigation">
		{{!! After all the posts, we have the previous/next pagination links }}
		{{pagination}}
	</div>
</div>
            
         <div class="loading"></div>
           
 <!-- Javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{asset "js/libs/jquery-1.11.1.min.js"}}"></script>
    <script src="{{asset "js/bootstrap.min.js"}}"></script>
    <script src="{{asset "js/libs/imagesloaded.3.1.8.min.js"}}"></script>
    <script src="{{asset "js/libs/jquery.masonry.3.2.1.min.js"}}"></script>
    <script src="{{asset "js/base.js"}}" type="text/javascript"></script>
 <script type="text/javascript">
var $container = $('.masonry-container');
$container.imagesLoaded( function () {
  $container.masonry({
    columnWidth: '.item',
    itemSelector: '.item'
  });   
});
      

</script>



</body></html>  
      
     